.col-sm-4.col-lg-4.col-md-4{'ng-repeat' => 'product in products | filter:query'}
  .thumbnail
    %img{alt: "Product Image", src: "http://placehold.it/320x150"}/
    .caption
      %h4.pull-right &#8377; {{product.price}}
      %h4
        %a{href: "#"} {{product.name}}
      %p
        {{product.description}}
        = succeed "." do
          %a{href: "http://www.bootsnipp.com", target: "_blank"} Bootsnipp - http://bootsnipp.com
    .ratings
      %p.pull-right 15 reviews
      %p
        %span.glyphicon.glyphicon-star
        %span.glyphicon.glyphicon-star
        %span.glyphicon.glyphicon-star
        %span.glyphicon.glyphicon-star
        %span.glyphicon.glyphicon-star